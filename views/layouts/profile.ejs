      })

      function show_notification(message, type) {
                var notification = $("#notification");
                notification.text(message).removeClass("error success").addClass(type);
                notification.css("top", "20px").fadeIn();

                // Ẩn sau 3 giây
                setTimeout(function () {
                    notification.fadeOut(function () {
