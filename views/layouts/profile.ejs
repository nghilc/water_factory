    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">      
        <div class="row">
          <section class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h5><strong>Thông tin cá nhân</strong></h5>
                </div>
                <div class="card-body d-flex  justify-content-center">
                    <div class="row mb-1 d-flex flex-wrap align-items-end container">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-group">
                                <label for="" >Tên đăng nhập:</label>
                                <input class="form-control" type="text" autocomplete="off" value="<%= username%>" id="profile_username" readonly>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-group">
                                <label for="" >Vai trò:</label>
                                <input class="form-control" type="text" autocomplete="off" value="<%= (role == 'admin' ? 'Quản lý' : 'Người dùng') %>" id="profile_role" readonly>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-group">
                                <label for="profile_full_name" >Họ và tên:</label>
                                <input class="form-control" type="text" autocomplete="off" value="<%= full_name%>" id="profile_full_name">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-group">
                                <label for="profile_mail" >Email:</label>
                                <input class="form-control" type="text" autocomplete="off" value="<%= mail%>" id="profile_mail">
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" style="width: 100%;" onclick="change_user_info()">Lưu</button>
                        </div> 
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h5><strong>Đổi mật khẩu</strong></h5>
                </div>
                <div class="card-body d-flex  justify-content-center">
                    <div class="row mb-1 d-flex flex-wrap align-items-end container">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="" >Mật khẩu hiện tại:</label>
                                <input class="form-control" type="password" autocomplete="off" id="current_password">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label for="" >Mật khẩu mới:</label>
                                <input class="form-control" type="password" autocomplete="off" id="new_password">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label for="" >Xác nhận mật khẩu mới:</label>
                                <input class="form-control" type="password" autocomplete="off" id="confirm_new_password">
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" style="width: 100%;" onclick="change_password()">Lưu</button>
                        </div> 
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h5><strong>Cài đặt điều hướng</strong></h5>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <div class="row mb-1 d-flex flex-wrap align-items-start container">
                        <!-- Chú thích -->
                        <div class="col-12 mb-3">
                            <small class="text-muted">Thay đổi cài đặt này sẽ thay đổi điều hướng trang đầu tiên sau khi đăng nhập.</small>
                        </div>
            
                        <!-- Radio buttons -->
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input hover_class" type="radio" name="menu_option" id="option1" value="1" <%= menu_option == 1 ? 'checked' : '' %>>
                                <label class="form-check-label hover_class" for="option1">Trang giám sát hệ thống (mặc định)</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input hover_class" type="radio" name="menu_option" id="option2" value="2" <%= menu_option == 2 ? 'checked' : '' %>>
                                <label class="form-check-label hover_class" for="option2">Trang giám sát tổng quan</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input hover_class" type="radio" name="menu_option" id="option3" value="3" <%= menu_option == 3 ? 'checked' : '' %>>
                                <label class="form-check-label hover_class" for="option3">Trang giám sát trực tuyến</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input hover_class" type="radio" name="menu_option" id="option5" value="5" <%= menu_option == 5 ? 'checked' : '' %>>
                                <label class="form-check-label hover_class" for="option5">Trang giám sát sản lượng</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input hover_class" type="radio" name="menu_option" id="option4" value="4" <%= menu_option == 4 ? 'checked' : '' %>>
                                <label class="form-check-label hover_class" for="option4">Tự động lưu vị trí cuối</label>
                            </div>
                        </div>
            
                        <!-- Nút lưu -->
                        <div class="col-12 mt-3">
                            <button class="btn btn-primary" style="width: 100%;" onclick="save_menu_option_setting()">Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h5><strong>Cài đặt nhận thông báo cảnh báo</strong></h5>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <table id="notifi_setting" class="table table-bordered text-center table-striped" class="display">
                        <thead style="background-color: #a8dbf0;">
                            <th class="border_th_d" style="min-width: 7%">STT</th>
                            <th class="border_th_d">Đơn vị quản lý</th>
                            <th class="border_th_d">Trạng thái nhận thông báo</th>
                        </thead>
                        <tbody id="notifi_setting_body">
                            <% for(let i=0; i < dvql.length; i++){ %>
                                <tr>
                                    <td><%=(i+1)%></td>
                                    <td><%= dvql[i].org_name %></td>
                                    <td>
                                        <input type="checkbox" class="bootstrap_toggle noti_setting_sw" <%= ((dvql[i].status == 1) ? "checked" : "" ) %>  data-toggle="toggle" data-on="Bật" data-off="Tắt" data-onstyle="success" data-offstyle="secondary" data-width="50" dvql_id="<%= dvql[i].id %>" data-size="sm">
                                    </td>
                                </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
          </section>
          <!-- right col -->
        </div>
        <!-- /.row (main row) -->
      </div><!-- /.container-fluid -->
    </section>
